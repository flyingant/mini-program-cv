/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
} 

.arrow_down {
  position: absolute;
  bottom: 40rpx;
  width: 100%;
  height: 72rpx;
  text-align: center;
}

@keyframes blinker {  
  50% { opacity: 0; }
}

.arrow_down image {
  width: 64rpx;
  height: 64rpx;
   /* animation: blinker 3s linear infinite;  */
}

.panel {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.panel .title {
  min-height: 20%;
  height: 72rpx;
  margin-top: 32rpx;
  line-height: 72rpx;
  font-size: 16px;
  font-weight: bolder;
  text-align: left;
  text-transform: uppercase;
  text-indent: 1em;
  border: 1px solid transparent;
  border-left: none;
  border-radius: 0 16rpx 16rpx 0;
  background-color: #313131;
}

.panel .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 64rpx;
}
